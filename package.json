{
    "name": "playwright-boilerplate",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "./node_modules/mocha/bin/mocha --config=./mocha-configs/.mocharc.js",
        "lint": "eslint --no-ignore --ext .js --ext .ts .",
        "lint:write": "eslint --ext .js --ext .ts --fix",
        "docker:base": "docker build -f Dockerfile --no-cache -t playwright .",
        "docker:test": "docker container run --env browser=chromium --env env=all:qa playwright"
    },
    "lint-staged": {
        "*.(js|ts)": [
            "npm run lint:write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [],
    "author": "Alex Vershinin",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "^4.2.15",
        "@types/config": "^0.0.38",
        "@types/lodash": "^4.14.168",
        "@types/mocha": "^8.2.1",
        "@types/node": "^14.14.31",
        "@types/yn": "^3.1.0",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "chai": "^4.3.0",
        "config": "^3.3.3",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-chai-friendly": "^0.6.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-mocha": "^8.0.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.6",
        "lint-staged": "^10.5.4",
        "lodash": "^4.17.20",
        "mocha": "^8.3.0",
        "mocha-multi-reporters": "^1.5.1",
        "playwright": "^1.9.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.5",
        "yn": "^3.1.1"
    }
}
